<div class="col-md-4">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= link_to "#{doctor.name}", doctor %></h4>
      <p class="card-text">
        <%= doctor.speciality %>
        <%= doctor.vaccination_centers.size %>
      </p>
      <p>
        <%= link_to 'Show', doctor %>
        <%= link_to 'Edit', edit_doctor_path(doctor) %>
        <%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
    </div>
  </div>
</div>